<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="roadtrip"
            type="org.wit.tripshare.models.RoadtripModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

        <RelativeLayout
            android:id="@+id/cardRoadtrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondaryLight"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roadtripTitle"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{roadtrip.roadtripTitle}"
                android:textSize="30sp"
                tools:text="A Title"
                tools:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roadtripDescription"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roadtripTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{roadtrip.roadtripDescription}"
                tools:textColor="@color/colorSecondaryDark"
                tools:text="A Description"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roadtripHighlights"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roadtripDescription"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{roadtrip.roadtripHighlights}"
                android:textColor="@color/colorSecondaryDark"
                tools:text="Highlights" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roadtripLowlights"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roadtripHighlights"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{roadtrip.roadtripLowlights}"
                android:textColor="@color/colorSecondaryDark"
                tools:text="Lowlights" />

            <RatingBar
                android:id="@+id/roadtripRatingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/roadtripLowlights"
                android:scaleX=".7"
                android:scaleY=".7"
                android:theme="@style/RatingBar"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/imageIcon"
                android:isIndicator="true"
                android:rating="@{roadtrip.rating}" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>